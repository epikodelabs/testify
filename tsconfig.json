{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "declaration": false,
    "outDir": "./dist/out-tsc",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "sourceMap": false,
    "types": ["node", "jasmine"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["lib"]
}
